  "license": "see LICENSE in LICENSE",
  "scripts": {
    "ship": "echo 'please globally run `lerna publish` to prevent npm auth issues'",
    "test": "lerna run test",
    "build": "lerna run build",
    "watch": "lerna run --parallel watch",
    "prepublish": "lerna run build",
    "reset": "npm run reset:node-modules && npm run reset:logs && npm run reset:dist && npm run reset:npm && npm run reset:links",
    "reset:node-modules": "find . -name 'node_modules' -type d -exec rm -rf '{}' +",
    "reset:logs": "find . -name '*.log' -type f -delete",
    "reset:dist": "find . -name 'dist' -type d -exec rm -rf '{}' +",
    "reset:npm": "find . -name 'package-lock.json' -type f -delete"
  }
}
