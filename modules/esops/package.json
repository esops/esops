{
  "name": "esops",
  "version": "1.0.0",
  "description": "Declarative infrastructure for cleaner repositories.",
  "main": "library/run/index.js",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "watch": "npm run build:watch & npm run test:watch",
    "test": "ts-node ./node_modules/.bin/riteway source/**/*.spec.ts | tap-nirvana",
    "coverage": "nyc npm test",
    "test:watch": "npm-watch test",
    "build:watch": "tsc -w"
  },
  "dependencies": {
    "fs-plus": "^3.0.2",
    "is-directory": "^0.3.1",
    "multimatch": "^2.1.0",
    "promised-pipe": "^1.1.1",
    "ramda": "^0.25.0",
    "read-pkg": "^4.0.1",
    "update-generated-text-fs": "file:../update-generated-text-fs"
  },
  "devDependencies": {
    "@types/node": "^10.12.9",
    "npm-watch": "0.5.0",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "riteway": "^4.0.1",
    "snapshotter": "^2.0.1",
    "tap-nirvana": "^1.1.0",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.6"
  },
  "watch": {
    "test": "library/**/*.js"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  }
}
